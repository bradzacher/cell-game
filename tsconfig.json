{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": false,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
		"declaration": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outFile": "dist/game.js",
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}